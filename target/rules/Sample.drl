package com.sample
 
import domen.Oblast;
import domen.Ispitanik;
 
rule "Administracija jako izabrao pravnik"
no-loop true
    when
        o : Oblast( ime == "administracija", poeni > 30) 
        i : Ispitanik( izabranoZanimanje == "Pravnik")
    then
        System.out.println("U pravilima sam");
        i.setPredlozeniFakultet("Pravni fakultet");
        update( i );
end

