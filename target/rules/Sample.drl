rule "Administracija jako nije izabrao nijedan od administrativnih zanimanja"
no-loop true
    when
        o : Oblast( ime == "administracija", poeni > 30) 
        i : Ispitanik( izabranoZanimanje != "Blagajnik" && izabranoZanimanje != "Racunovodja" && izabranoZanimanje != "Pravnik")
    then
        System.out.println("U pravilima sam");
        i.setPredlozeniFakultet("Pravni fakultet ili Ekonomski fakultet");
        update( i );
end

